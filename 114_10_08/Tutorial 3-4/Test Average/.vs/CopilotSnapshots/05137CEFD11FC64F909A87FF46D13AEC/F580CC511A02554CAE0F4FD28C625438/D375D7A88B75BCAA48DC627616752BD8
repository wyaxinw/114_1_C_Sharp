using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Test_Average
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        // 修正：新增三個按鈕的事件處理方法

        private void calculateButton_Click(object sender, EventArgs e)
        {
            // 取得三個測驗分數並計算平均
            double score1, score2, score3, average;
            bool isValid1 = double.TryParse(test1TextBox.Text, out score1);
            bool isValid2 = double.TryParse(test2TextBox.Text, out score2);
            bool isValid3 = double.TryParse(test3TextBox.Text, out score3);

            if (isValid1 && isValid2 && isValid3)
            {
                average = (score1 + score2 + score3) / 3.0;
                averageLabel.Text = average.ToString("F2");
            }
            else
            {
                MessageBox.Show("請輸入有效的分數！", "輸入錯誤", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void clearButton_Click(object sender, EventArgs e)
        {
            // 清除所有輸入與輸出欄位
            test1TextBox.Text = "";
            test2TextBox.Text = "";
            test3TextBox.Text = "";
            averageLabel.Text = "";
            test1TextBox.Focus();
        }

        private void exitButton_Click(object sender, EventArgs e)
        {
            // 關閉表單
            this.Close();
        }

        private void test2PromptLabel_Click(object sender, EventArgs e)
        {

        }

        private void averageLabel_Click(object sender, EventArgs e)
        {

        }
    }
}
